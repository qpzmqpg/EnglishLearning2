<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 顶部应用栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="英语学习助手"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu_notifications"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="通知"
                android:padding="12dp"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="更多"
                android:padding="12dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- 搜索区 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="4dp"
        app:cardCornerRadius="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/search_edittext"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="输入单词进行查询..."
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:textSize="16sp"
                android:textColorHint="#99000000"/>
            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu_search"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="搜索"
                android:padding="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 功能按钮区 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <ImageView 
                    android:src="@drawable/ic_menu_agenda" 
                    android:layout_width="48dp" 
                    android:layout_height="48dp" 
                    android:padding="8dp"
                    android:background="@drawable/rounded_icon_bg"
                    android:elevation="2dp"/>
                <TextView 
                    android:text="单词本" 
                    android:textSize="14sp" 
                    android:textColor="#333" 
                    android:paddingTop="8dp" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <ImageView 
                    android:src="@drawable/ic_menu_recent_history" 
                    android:layout_width="48dp" 
                    android:layout_height="48dp" 
                    android:padding="8dp"
                    android:background="@drawable/rounded_icon_bg"
                    android:elevation="2dp"/>
                <TextView 
                    android:text="复习计划" 
                    android:textSize="14sp" 
                    android:textColor="#333" 
                    android:paddingTop="8dp" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <ImageView 
                    android:src="@drawable/ic_menu_sort_by_size" 
                    android:layout_width="48dp" 
                    android:layout_height="48dp" 
                    android:padding="8dp"
                    android:background="@drawable/rounded_icon_bg"
                    android:elevation="2dp"/>
                <TextView 
                    android:text="学习统计" 
                    android:textSize="14sp" 
                    android:textColor="#333" 
                    android:paddingTop="8dp" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <ImageView 
                    android:src="@drawable/ic_menu_manage" 
                    android:layout_width="48dp" 
                    android:layout_height="48dp" 
                    android:padding="8dp"
                    android:background="@drawable/rounded_icon_bg"
                    android:elevation="2dp"/>
                <TextView 
                    android:text="设置" 
                    android:textSize="14sp" 
                    android:textColor="#333" 
                    android:paddingTop="8dp" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 历史查询记录标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="最近学习"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#222"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全部"
                android:textSize="14sp"
                android:textColor="#2196F3"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F5F7FA"
            android:padding="4dp"
            android:clipToPadding="false"
            android:elevation="2dp" />
    </LinearLayout>

    <!-- 底部导航栏 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:itemIconSize="24dp"
        app:itemTextAppearanceActive="@style/TextAppearance.AppCompat.Caption"
        app:itemTextAppearanceInactive="@style/TextAppearance.AppCompat.Caption"
        app:itemIconTint="@color/bottom_nav_colors"
        app:itemTextColor="@color/bottom_nav_colors"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"/>

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textColor="#222"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="8dp"/>
</LinearLayout>
